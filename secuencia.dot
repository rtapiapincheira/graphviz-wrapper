digraph finite_state_machine {
    rankdir=LR;
    node[shape=point, color=white, fontcolor=white]; start;
    node[shape=doublecircle, color=black, fontcolor=black]; 2;
    node[shape=circle]; 0;
    start -> 0;
    0 -> 1 [label="a"];
    1 -> 2 [label="b"];
    2 -> 2 [label="a"];
    2 -> 2 [label="b"];
    1 -> 0 [label="a"];
}
